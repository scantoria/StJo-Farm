rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'stephen.cantoria@stjo.farm';
    }

    // Listings collection
    match /listings/{listingId} {
      // Anyone can read listings
      allow read: if true;

      // Only admins can create, update, or delete listings
      allow create, update, delete: if isAdmin();
    }

    // Contact messages collection
    match /contact-messages/{messageId} {
      // Anyone can create contact messages
      allow create: if true;

      // Only admins can read and update contact messages
      allow read, update: if isAdmin();

      // No one can delete contact messages (for record keeping)
      allow delete: if false;
    }

    // Calf adoption requests collection
    match /calf-adoptions/{adoptionId} {
      // Anyone can create adoption requests
      allow create: if true;

      // Only admins can read and update adoption requests
      allow read, update: if isAdmin();

      // No one can delete adoption requests (for record keeping)
      allow delete: if false;
    }

    // Animals of the Month collection
    match /animalsOfMonth/{animalId} {
      // Anyone can read animals of the month
      allow read: if true;

      // Only admins can create, update, or delete animals
      allow create, update, delete: if isAdmin();
    }

    // Prevent access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
